<div id="div-main-body">
<div id="div-border">
	
<h1>Messages#new</h1>
<p>Find me in app/views/messages/new.html.erb</p>

<%= form_for @new_message, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
	
	<div class="form-group input-group hidden">
    <div class="input-group-prepend">
        <span class="input-group-text"> </span>
     </div>
     <%= f.text_field :sender_id, value: current_user.id, placeholder: current_user.id %>
    </div>

    <div class="form-group input-group">
    <div class="input-group-prepend">
        <span class="input-group-text"> </span>
     </div>
     <%= f.label :recipient_id %><br>
     <%= f.text_field :recipient_id, placeholder: "Envoyer Ã ", class: "form-control" %>
    </div>

    <div class="form-group input-group">
    <div class="input-group-prepend">
        <span class="input-group-text"> </span>
     </div>
     <%= f.label :title %><br>
     <%= f.text_field :title, placeholder: "Titre", class: "form-control" %>
    </div>

    <div class="form-group input-group">
    <div class="input-group-prepend">
        <span class="input-group-text"> </span>
     </div>
     <%= f.label :body %><br>
     <%= f.text_area :body, placeholder: "Votre message", size: "60x7", class: "form-control" %>
    </div>
    
	<div class="form-group">
      <%= f.submit "Enregistrer", class: "btn btn-primary btn-block" %>
    </div> <!-- form-group// -->   

<% end %>

</div>
</div>