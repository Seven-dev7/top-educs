<h1>Messages#edit</h1>
<p>Find me in app/views/messages/edit.html.erb</p>

<%= form_for @message_to_edit, url: {action: "update"}, html: {class: "nifty_form"} do |f| %>
	
	<div class="form-group input-group">
    <div class="input-group-prepend">
        <span class="input-group-text"> </span>
     </div>
     <div> From: <%= @sender_id %><br> </div>
     <% f.text_field :sender_id, value: @sender_id %>
    </div>

    <div class="form-group input-group">
    <div class="input-group-prepend">
        <span class="input-group-text"> </span>
     </div>

     <div> To: <%= @recipient_id %><br> </div>
     <% f.text_field :recipient_id, value: @sender_id%>
    </div>

    <div class="form-group input-group">
    <div class="input-group-prepend">
        <span class="input-group-text"> </span>
     </div>
     <%= f.label :title %><br>
     <%= f.text_field :title, placeholder: @message_title, class: "form-control" %>
    </div>

    <div class="form-group input-group">
    <div class="input-group-prepend">
        <span class="input-group-text"> </span>
     </div>
     <%= f.label :body %><br>
     <%= f.text_area :body, placeholder: @message_body, size: "60x7", class: "form-control" %>
    </div>
    
	<div class="form-group">
      <%= f.submit "Enregistrer", class: "btn btn-primary btn-block" %>
    </div> <!-- form-group// -->   

<% end %>

</div>
</div>