    <div class="form-group input-group hidden">
    <div class="input-group-prepend">
        <span class="input-group-text"> </span>
     </div>
     <%= f.text_field :user_id, value: current_user.id, placeholder: current_user.id %>
    </div>

  <div class="form-group input-group">
    <div class="input-group-prepend">
        <span class="input-group-text"> </span>
     </div>
     <%= f.text_field :pace, autocomplete: "pace", class: "form-control", placeholder: "Rythme" %>
    </div> <!-- form-group// -->
	
	<div class="form-group input-group">
    <div class="input-group-prepend">
        <span class="input-group-text"> </span>
     </div>
     <%= f.text_field :recurring, autocomplete: "recurring", class: "form-control", placeholder: "RÃ©currence" %>
    </div>



    <div class="form-group input-group">
    <div class="input-group-prepend">
        <span class="input-group-text"> </span>
     </div>
     <%= f.text_field :duration, autocomplete: "duration", class: "form-control", placeholder: "Duration" %>
    </div>


	<div class="form-group">
      <%= f.submit "Enregistrer", class: "btn btn-primary btn-block" %>
